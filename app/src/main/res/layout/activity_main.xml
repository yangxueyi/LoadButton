<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhang.loadbutton.MainActivity">

   <com.example.loadbutton.LoadButton
       android:id="@+id/load_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:backColor="#009966"
       app:contentPaddingLR="20dp"
       app:contentPaddingTB="20dp"
       android:layout_marginTop="5dp"
       android:textSize="26sp"
       app:progressedWidth="4dp"
       app:content_color="@android:color/white"
       android:text="点击加载"/>

   <LinearLayout
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   <Button
       android:id="@+id/btn_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginLeft="5dp"
       android:text="成功"/>

   <Button
       android:id="@+id/btn_2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginLeft="5dp"
       android:text="失败"/>

   <Button
       android:id="@+id/btn_3"
       android:layout_marginLeft="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginRight="5dp"
       android:text="重置"/>

   </LinearLayout>





</LinearLayout>
